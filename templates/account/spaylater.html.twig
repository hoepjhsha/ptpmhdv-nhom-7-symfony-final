{% extends "_layouts/shop/main.html.twig" %}

{% block main %}

    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-4">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-body d-flex align-items-center justify-content-center flex-column">
                                    <h2>Available balance</h2>
                                    <h1 class="fw-bolder">{{ app.user.creditLimit | number_format(0, ',', '.') }} VNĐ</h1>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-body d-flex flex-row justify-content-between align-items-center">
                                    <div>
                                        <h3>0 VNĐ</h3>
                                        <h5 class="text-secondary">Payment period from 24th to 10th</h5>
                                    </div>
                                    <div>
                                        <h2><i class="fas fa-angle-right" style="cursor: pointer"></i></h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header d-flex align-items-center justify-content-between">
                            <h4 class="card-title">My bills</h4>
                            <button class="btn btn-outline-primary">Transaction History</button>
                        </div>
                        <div class="card-body">

                            <!-- Nav tabs -->
                            <ul class="nav nav-pills nav-justified" role="tablist">
                                <li class="nav-item waves-effect waves-light">
                                    <a class="nav-link active" data-bs-toggle="tab" href="#unpaid" role="tab" aria-selected="true">Unpaid</a>
                                </li>
                                <li class="nav-item waves-effect waves-light">
                                    <a class="nav-link" data-bs-toggle="tab" href="#paid" role="tab" aria-selected="false">Paid</a>
                                </li>
                            </ul>

                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div class="tab-pane p-3 active" id="unpaid" role="tabpanel">
                                    <div><h4 class="text-secondary">Next bills</h4></div>
                                    <div class="card">
                                        <div class="card-body d-flex flex-row justify-content-between align-items-center">
                                            <div>
                                                <h4>December</h4>
                                                <h6 class="text-secondary">Payment period from 24th to 10th</h6>
                                            </div>
                                            <div class="d-flex">
                                                <h4 class="me-3">300.000 VNĐ</h4>
                                                <h4><i class="fas fa-angle-right" style="cursor: pointer"></i></h4>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card">
                                        <div class="card-body d-flex flex-row justify-content-between align-items-center">
                                            <div>
                                                <h4>January</h4>
                                                <h6 class="text-secondary">Payment period from 24th to 10th</h6>
                                            </div>
                                            <div class="d-flex">
                                                <h4 class="me-3">300.000 VNĐ</h4>
                                                <h4><i class="fas fa-angle-right" style="cursor: pointer"></i></h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane p-3" id="paid" role="tabpanel">

                                    <div class="card">
                                        <div class="card-body d-flex flex-row justify-content-between align-items-center">
                                            <div>
                                                <h4>November</h4>
                                                <h6 class="text-secondary">Payment period from 24th to 10th</h6>
                                            </div>
                                            <div class="d-flex">
                                                <h4 class="me-3">300.000 VNĐ</h4>
                                                <h4><i class="fas fa-angle-right" style="cursor: pointer"></i></h4>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card">
                                        <div class="card-body d-flex flex-row justify-content-between align-items-center">
                                            <div>
                                                <h4>October</h4>
                                                <h6 class="text-secondary">Payment period from 24th to 10th</h6>
                                            </div>
                                            <div class="d-flex">
                                                <h4 class="me-3">300.000 VNĐ</h4>
                                                <h4><i class="fas fa-angle-right" style="cursor: pointer"></i></h4>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}